@{
    ViewData["Title"] = "Monitoring Registrasi";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark font-weight-bold">
                    <i class="fas fa-desktop mr-2 text-primary"></i>MONITORING TRUK
                </h1>
                <p class="text-muted small">Pantauan kendaraan di area pabrik saat ini.</p>
            </div>
            <div class="col-sm-6 text-right">
                <button class="btn btn-primary shadow-sm px-4" style="border-radius: 10px;" data-toggle="modal" data-target="#modal-register">
                    <i class="fas fa-truck-loading mr-2"></i>Registrasi Masuk Baru
                </button>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card bg-primary text-white shadow-sm border-0" style="border-radius: 12px;">
                    <div class="card-body d-flex align-items-center">
                        <div class="mr-3">
                            <i class="fas fa-sign-in-alt fa-2x opacity-50"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 font-weight-bold">Status: REGISTRATION IN</h5>
                            <small>Sedang mengantri / Belum timbang awal</small>
                        </div>
                        <div class="ml-auto">
                            <h2 class="font-weight-bold mb-0">12</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-success text-white shadow-sm border-0" style="border-radius: 12px;">
                    <div class="card-body d-flex align-items-center">
                        <div class="mr-3">
                            <i class="fas fa-sign-out-alt fa-2x opacity-50"></i>
                        </div>
                        <div>
                            <h5 class="mb-0 font-weight-bold">Status: REGISTRATION OUT</h5>
                            <small>Selesai bongkar / Menunggu timbang akhir</small>
                        </div>
                        <div class="ml-auto">
                            <h2 class="font-weight-bold mb-0">8</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0" style="border-radius: 15px;">
            <div class="card-header bg-white py-3 border-0">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="font-weight-bold mb-0">Antrian Aktif</h5>
                    <div style="width: 250px;">
                        <input type="text" id="tableSearch" class="form-control form-control-sm" placeholder="Cari Plat Nomor..." style="border-radius: 8px;">
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0" id="registrationTable">
                        <thead class="bg-light text-muted small text-uppercase">
                            <tr>
                                <th class="pl-4">Jam Register</th>
                                <th>No. Polisi</th>
                                <th>Driver / Supplier</th>
                                <th>Status Operasional</th>
                                <th class="text-right pr-4">Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="status-in">
                                <td class="pl-4">
                                    <span class="font-weight-bold">10:15</span>
                                    <div class="text-muted small">2 Jam Lalu</div>
                                </td>
                                <td><span class="badge badge-dark p-2" style="font-size: 1rem; min-width: 100px;">BH 1234 ABC</span></td>
                                <td>
                                    <div class="font-weight-bold">Andi Wijaya</div>
                                    <div class="small text-muted">PT. Sawit Jaya</div>
                                </td>
                                <td>
                                    <span class="badge badge-primary px-3 py-2" style="border-radius: 20px;">
                                        <i class="fas fa-clock mr-1"></i> REGISTRATION IN
                                    </span>
                                </td>
                                <td class="text-right pr-4">
                                    <button class="btn btn-outline-info btn-sm">Detail</button>
                                    <button class="btn btn-success btn-sm ml-1">Lanjut Timbang</button>
                                </td>
                            </tr>

                            <tr class="status-out">
                                <td class="pl-4">
                                    <span class="font-weight-bold">09:30</span>
                                    <div class="text-muted small">3 Jam Lalu</div>
                                </td>
                                <td><span class="badge badge-dark p-2" style="font-size: 1rem; min-width: 100px;">BG 8899 XY</span></td>
                                <td>
                                    <div class="font-weight-bold">Budi Santoso</div>
                                    <div class="small text-muted">Estate Mandiri</div>
                                </td>
                                <td>
                                    <span class="badge badge-success px-3 py-2" style="border-radius: 20px;">
                                        <i class="fas fa-check-circle mr-1"></i> REGISTRATION OUT
                                    </span>
                                </td>
                                <td class="text-right pr-4">
                                    <button class="btn btn-outline-info btn-sm">Detail</button>
                                    <button class="btn btn-danger btn-sm ml-1">Cetak Tiket Keluar</button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@await Html.PartialAsync("_RegistrationModal")

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#tableSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#registrationTable tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}